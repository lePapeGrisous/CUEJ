				{% elseif theme.id == '10' %}
				<img src="upload/img-chap02-theme.jpg">
				<h3 class="jeu-text">{{ theme.nom }}</h3>
				{% elseif theme.id == '14' %}
				<img src="upload/img-chap03-theme.jpg">
